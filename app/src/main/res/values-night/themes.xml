<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FUTTA" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_3000</item>
        <item name="colorPrimaryVariant">@color/green_3100</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="calendar_text">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="calendar_text_night">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="calendar_decorator">
        <item name="android:textColor">@color/green_3000</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>